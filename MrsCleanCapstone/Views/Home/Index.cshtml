            var jsViewData = '@ViewData["MESSAGE"]';
            if (jsViewData && jsViewData == "SUCCESS") {
                toastr.success("Thanks for the feedback");
            } else if (jsViewData && jsViewData == "ERROR") {
                toastr.error("Error Encountered! Please try again later");
            }
        //slider
        const slides = document.querySelectorAll('.slides');
        const prev = document.querySelector('.prev');
        const next = document.querySelector('.next');

        i = 0;

        function ActiveSlides(n) {
            for (slide of slides) {
                slide.classList.remove('active');
            }
            slides[n].classList.add('active')
        }

        prev.addEventListener('click', () => {
            if (i == 0) {
                i = slides.length - 1;
                ActiveSlides(i);
            } else {
                i--;
                ActiveSlides(i);
            }
        })

        next.addEventListener('click', () => {
            if (i == slides.length - 1) {
                i = 0;
                ActiveSlides(i);
            } else {
                i++;
                ActiveSlides(i);
            }
        });

        });


    </script>
}
