@using MrsCleanCapstone.Models.Authentication;
@inject SignInManager<Employee> SignInManager;

<!DOCTYPE html>
<html lang="en">

<head>

    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - MrsCleanCapstone</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.css" />
    <link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/21.1.4/css/dx.light.css">
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/productStyle.css" />
    <link rel="stylesheet" href="~/css/loginStyle.css" />
    <link rel="stylesheet" href="~/css/mc-style.css" />
    <link rel="stylesheet" href="~/css/admin-style.css" />
    <link rel="stylesheet" href="~/css/admin-cards.css" />
    <link rel="stylesheet" href="~/css/deals.css" />
    <link rel="stylesheet" href="~/css/myApp.css" />
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    @*<link href="~/css/twitter-bootstrap/css/bootstrap.css" rel="stylesheet" />*@
    @*<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">*@
    @*<link rel="stylesheet" href="https://cdn3.devexpress.com/jslib/21.1.4/css/dx.light.css">*@
    <link href="https://cdn.jsdelivr.net/npm/smartwizard@5/dist/css/smart_wizard_all.min.css" rel="stylesheet" type="text/css" />
    <link rel="stylesheet" href="/datepicker/jquery-ui.min.css">

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/2.4.0/jszip.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/babel-polyfill/7.4.0/polyfill.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/exceljs/4.1.1/exceljs.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/FileSaver.js/2.0.2/FileSaver.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf/2.0.0/jspdf.umd.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jspdf-autotable/3.5.9/jspdf.plugin.autotable.min.js"></script>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="/datepicker/jquery-ui.js"></script>
    <!-- DevExtreme library -->
    <script type="text/javascript" src="https://cdn3.devexpress.com/jslib/21.1.4/js/dx.all.js"></script>
</head>

<body>
    <header>
        <a asp-action="Index" asp-controller="Home" asp-fragment="">
            <img src="/images/mrsclean-logosmall.png" class="logo">
        </a>
        <div class="toggle"></div>
        <ul class="navigation">
            <li><a asp-action="Index" asp-controller="Products">Products</a></li>
            <li><a asp-action="Index" asp-controller="Deals">Deals</a></li>
            <li><a asp-action="Checklist" asp-controller="Home">Checklist</a></li>
            <li><a asp-action="Index" asp-controller="Home" asp-fragment="services">Services</a></li>
            <li><a asp-action="Index" asp-controller="Home" asp-fragment="aboutus">About</a></li>
            <li><a asp-action="Index" asp-controller="Home" asp-fragment="contact">Contact</a></li>
            <li><a asp-action="Search" asp-controller="Appointments">My Appointments</a></li>
            @if (SignInManager.IsSignedIn(User))
            {
                <li><a asp-action="Index" asp-controller="Admin">Admin</a></li>

                <li>
                    <form asp-action="logout" asp-controller="Auth" method="post">
                        <button type="submit" style="width:auto" class="auth_btn ml-2">
                            Logout @User.Identity.Name
                        </button>
                    </form>
                </li>
            }
            else
            {
                <li><a asp-action="Login" asp-controller="Auth" class="auth_btn p-sm-2">Login</a></li>
                <li><a asp-action="Register" asp-controller="Auth" class="auth_btn p-sm-2">Register</a></li>
            }
        </ul>
    </header>
    <div class="main-container">
        <main role="main">
            @RenderBody()
        </main>
    </div>

    @*<footer class="border-top footer text-muted">
            <div class="container">
                &copy; 2021 - MrsCleanCapstone - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            </div>
        </footer>*@
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
