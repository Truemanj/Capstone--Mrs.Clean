@model List<Deal> 

<div class="dealsContainer">
    @foreach (var el in Model)
    {
        <div class="card">
            <div class="box">
                <div class="content">
                    <h2>@el.Id</h2>
                    <h3>@el.Title</h3>
                    <p>@el.Description</p>
                    <a href="#">@el.Highlight</a>
                </div>
            </div>
        </div>
    }
