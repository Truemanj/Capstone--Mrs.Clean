@model List<Deal>
<div class="deals_section">
    <div class="deals_title">
        <h3>Looking for better prices</h3>
        <h2>Browse our deals</h2>
    </div>
    <div class="dealsContainer">

        @if (Model.Count == 0)
        {
            <div>No deals found!!!</div>
        }
        else
        {
            @foreach (var el in Model)
            {
                <div class="card">
                    <div class="box">
                        <div class="card-content">
                            <h2>@el.Id</h2>
                            <h3>@el.Title</h3>
                            <p>@el.Description</p>
                            <a href="#">@el.Highlight</a>
                        </div>
                    </div>
                </div>
            }
        }

    </div>
</div>
